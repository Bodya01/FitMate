@model FitMate.Presentation.ViewModels.Nutrition.SummaryDataViewModel;

<div class="col">
    <div class="card">
        <div class="card-header">
            <h3>@Model.Period  @(Model.Period.Contains("Last") ? Html.Raw("<span class=\"small\" style=\"font-size:55%\">Average</span>") : "")</h3>
        </div>
        <div class="card-body">
            <div class="text-center mb-2">
                <h4>Calories</h4>
                @Model.Calories cal
            </div>
            <div class="d-flex text-center">
                <div class="flex-grow-1">
                    <h6>Carbs</h6>
                    <div>@(Model.Carbs)g</div>
                </div>
                <div class="flex-grow-1">
                    <h6>Fat</h6>
                    <div>@(Model.Fat)g</div>
                </div>
                <div class="flex-grow-1">
                    <h6>Protein</h6>
                    <div>@(Model.Protein)g</div>
                </div>
            </div>
        </div>
    </div>
</div>