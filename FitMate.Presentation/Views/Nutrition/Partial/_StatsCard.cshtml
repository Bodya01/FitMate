@model FitMate.Presentation.ViewModels.Nutrition.SummaryDataViewModel;

<div class="col">
    <div class="card mt-4">
        <div class="card-header">
            <h3 class="mb-0 font-weight-normal card-header-text">@Model.Period</h3>
        </div>
        <div class="card-body p-1">
            <div class="text-center">
                <h6 class="mb-0">Calories</h6>
                @Model.Calories cal
            </div>
            <div class="d-flex text-center">
                <div class="flex-grow-1">
                    <h6 class="mb-0">Carbs</h6>
                    <div>@(Model.Carbs)g</div>
                </div>
                <div class="flex-grow-1">
                    <h6 class="mb-0">Fat</h6>
                    <div>@(Model.Fat)g</div>
                </div>
                <div class="flex-grow-1">
                    <h6 class="mb-0">Protein</h6>
                    <div>@(Model.Protein)g</div>
                </div>
            </div>
        </div>
    </div>
</div>