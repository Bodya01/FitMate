@using FitMate.Controllers;
@using FitMate.Presentation.Helpers;
@model BodyweightTarget

@{
    ViewData["Title"] = "Edit Target";
}

<div class="container w-50">
    <form asp-controller="@(UiNamingHelper.GetControllerName<BodyweightController>())" asp-action="@nameof(BodyweightController.EditTarget)" method="post">
        <div class="row">
            <div class="col-6">
                <div class="form-group">
                    <label>Weight</label>
                    <input class="form-control" name="TargetWeight" type="number" min="1" max="300" step="0.1" required/>
                </div>
            </div>
            <div class="col-6">
                <div class="form-group">
                    <label>Target Date</label>
                    <input class="form-control" name="TargetDate" type="date" required />
                </div>
            </div>
        </div>
        <div class="float-right">
            <a asp-controller="@(UiNamingHelper.GetControllerName<BodyweightController>())" asp-action="@nameof(BodyweightController.Summary)" class="btn btn-secondary">Cancel</a>
            <input type="submit" class=" btn btn-primary" value="Save"/>
        </div>
    </form>
</div>