@using YourFitnessTracker.Presentation.Controllers
@using YourFitnessTracker.Presentation.Helpers
@using YourFitnessTracker.Presentation.ViewModels.Error
@model ErrorViewModel

<div class="w-100 text-xl-center text-light" style="margin-bottom: 250px">
    <i class="fa-solid fa-xmark" style="font-size: 100px"></i>
    <h1>An error occured.</h1>
    <p>
        <small>
            <a asp-controller="@(UiNamingHelper.GetControllerName<BodyweightController>())"
               asp-action="@nameof(BodyweightController.Summary)">
                Return to main page
            </a>
        </small>
    </p>
</div>

<div id="account" class="text-light my-auto">
    @if (Model.ShowRequestId)
    {
        <p>
            <strong>Request Id:</strong> <span>@Model.RequestId</span>
        </p>
    }
    <p class="d-flex flex-row my-1">
        <strong>Error: </strong>
        <span>&nbsp;@Model.ExceptionName.Replace("Exception", "")</span>
    </p>
    <p class="my-1">
        <strong>Details: </strong>
        <span>@Model.ExceptionMessage</span>
    </p>
    <p class="my-1">
        <strong>Details: </strong>
        <span>@Model.StackTrace</span>
    </p>
</div>